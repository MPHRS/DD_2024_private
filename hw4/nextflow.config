params {
  samples_csv = './samples.csv'
  outdir = './test_output/'
}

docker {
    enabled = true
}

// Конфигурация процессов с Docker
process {
    executor = 'local'
    
    // Процесс для FastQC
    withName: 'fastqc_n' {
        container = 'biocontainers/fastqc:v0.11.9_cv7'
    }
    withName: 'spades_n'{
        container = 'staphb/spades:3.15.5'
    }
    withName: 'quast_n'{
        container = 'staphb/quast:5.2.0'
    }
    withName: 'prokka_n'{
        container = 'staphb/prokka:1.14.6'
    }
    withName: 'abricate_n'{
        container = 'nanozoo/abricate:1.0.1--8960147'
    }
    withName: 'quast'{
        container = 'staphb/quast:5.2.0'
    }
    withName: 'prokka'{
        container = 'staphb/prokka:1.14.6'
    }
    withName: 'abricate'{
        container = 'nanozoo/abricate:1.0.1--8960147'
    }
}